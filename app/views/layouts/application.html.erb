<!DOCTYPE html>
<html>
  <head>
    <title>Taskleaf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="navbar-brand">
        Taskleaf
      </div>
      <ul class="navbar-nav ml-auto">
        <% if current_user %>
          <li><%= link_to 'タスク一覧', tasks_path, class: 'nav-link' %></li>
          <% if current_user.admin? %>
            <li><%= link_to 'ユーザ一覧', admnin_users_path, class: 'nav-link' %></li>
          <% end %>
          <li><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
        <% else %>
          <li>  <%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        <% end %>
    </ul>
    </nav>
    <div class="container">
      <% if flash.notice.present? %>
        <div class="alert alert-success"><%= flash.notice %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
